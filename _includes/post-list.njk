<div class="container">
  {% for post in postList %} {% if post.data.title != blank %}
  <div class="page-item">
    <div class="item-left">
      <div class="date-item">{{ post.date | dateformat }}</div>
      <div class="title-item">
        <a href="{{ post.url }}">{{ post.data.title }} </a>
      </div>
    </div>
    <div class="categories">
      {% if post.data.tags %} {% set tagsList = post.data.tags %} {% include
      'tag.njk' %} {% endif %}
    </div>
  </div>
  {% endif %} {% endfor %}
</div>
